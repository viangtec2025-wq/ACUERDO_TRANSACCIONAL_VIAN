    <script>
        // Función para convertir número a texto en español (Bolivianos)
        function numeroALetras(num) {
            if (num === 0) return "CERO";
            
            const unidades = ["", "UNO", "DOS", "TRES", "CUATRO", "CINCO", "SEIS", "SIETE", "OCHO", "NUEVE"];
            const decenas = ["", "DIEZ", "VEINTE", "TREINTA", "CUARENTA", "CINCUENTA", "SESENTA", "SETENTA", "OCHENTA", "NOVENTA"];
            const especiales = ["", "ONCE", "DOCE", "TRECE", "CATORCE", "QUINCE", "DIECISEIS", "DIECISIETE", "DIECIOCHO", "DIECINUEVE"];
            
            const centenas = ["", "CIENTO", "DOSCIENTOS", "TRESCIENTOS", "CUATROCIENTOS", "QUINIENTOS", "SEISCIENTOS", "SETECIENTOS", "OCHOCIENTOS", "NOVECIENTOS"];
            
            function convertirTresDigitos(n) {
                if (n === 0) return "";
                if (n < 10) return unidades[n];
                if (n < 20) return especiales[n - 10];
                if (n === 20) return "VEINTE";
                if (n < 30) return "VEINTI" + unidades[n % 10];
                if (n < 100) {
                    return decenas[Math.floor(n / 10)] + (n % 10 !== 0 ? " Y " + unidades[n % 10] : "");
                }
                if (n === 100) return "CIEN";
                if (n < 1000) {
                    return centenas[Math.floor(n / 100)] + (n % 100 !== 0 ? " " + convertirTresDigitos(n % 100) : "");
                }
                return "";
            }
            
            function convertirMillon(n) {
                if (n === 0) return "";
                if (n === 1) return "UN MILLON";
                return convertirTresDigitos(n) + " MILLONES";
            }
            
            function convertirMiles(n) {
                if (n === 0) return "";
                if (n === 1) return "MIL";
                return convertirTresDigitos(n) + " MIL";
            }
            
            const entero = Math.floor(Math.abs(num));
            const decimal = Math.round((Math.abs(num) - entero) * 100);
            
            if (entero === 0 && decimal === 0) return "CERO";
            
            let resultado = "";
            
            const millones = Math.floor(entero / 1000000);
            const miles = Math.floor((entero % 1000000) / 1000);
            const unidadesNum = entero % 1000;
            
            if (millones > 0) {
                resultado += convertirMillon(millones) + " ";
            }
            
            if (miles > 0) {
                resultado += convertirMiles(miles) + " ";
            }
            
            if (unidadesNum > 0) {
                if (unidadesNum === 1 && miles === 0 && millones === 0) {
                    resultado += "UNO";
                } else {
                    resultado += convertirTresDigitos(unidadesNum);
                }
            }
            
            if (resultado === "") resultado = "CERO";
            
            resultado = resultado.trim();
            
            if (decimal > 0) {
                resultado += " CON " + (decimal < 10 ? "0" + decimal : decimal) + "/100 BOLIVIANOS";
            } else {
                resultado += " CON 00/100 BOLIVIANOS";
            }
            
            return resultado;
        }
        
        // Función para actualizar la vista previa
        function actualizarVistaPrevia() {
            const sexo = document.getElementById('sexo').value;
            const nombre = document.getElementById('nombre').value;
            const cedula = document.getElementById('cedula').value;
            const domicilio = document.getElementById('domicilio').value;
            const mesRetiro = document.getElementById('mesRetiro').value;
            const diaRetiro = document.getElementById('diaRetiro').value;
            const monto = document.getElementById('monto').value;
            
            // Actualizar campo 8 (monto en literal)
            let montoLiteral = "";
            if (monto) {
                const montoNum = parseFloat(monto);
                montoLiteral = numeroALetras(montoNum);
                document.getElementById('montoLiteral').value = montoLiteral;
            } else {
                document.getElementById('montoLiteral').value = "";
            }
            
            // Actualizar vista previa
            document.getElementById('previewCampo1').textContent = sexo || "[Campo 1: Sexo]";
            document.getElementById('previewCampo2').textContent = nombre || "[Campo 2: Nombre]";
            document.getElementById('previewCampo3').textContent = cedula || "[Campo 3: Cédula]";
            document.getElementById('previewCampo4').textContent = domicilio || "[Campo 4: Domicilio]";
            document.getElementById('previewCampo5').textContent = mesRetiro || "[Campo 5: Mes]";
            document.getElementById('previewCampo6').textContent = diaRetiro || "[Campo 6: Día]";
            document.getElementById('previewCampo7').textContent = monto ? monto + " Bs." : "[Campo 7: Monto]";
            document.getElementById('previewCampo8').textContent = montoLiteral || "[Campo 8: Monto en Literal]";
            document.getElementById('previewCampo7b').textContent = monto ? monto + " Bs." : "[Campo 7: Monto]";
            document.getElementById('previewMesFinal').textContent = mesRetiro || "[Campo 5: Mes]";
            document.getElementById('previewFirmaNombre').textContent = nombre || "[Campo 2: Nombre]";
            document.getElementById('previewFirmaCedula').textContent = cedula || "[Campo 3: Cédula]";
        }
        
        // Event listeners para todos los campos
        document.getElementById('sexo').addEventListener('change', actualizarVistaPrevia);
        document.getElementById('nombre').addEventListener('input', actualizarVistaPrevia);
        document.getElementById('cedula').addEventListener('input', actualizarVistaPrevia);
        document.getElementById('domicilio').addEventListener('input', actualizarVistaPrevia);
        document.getElementById('mesRetiro').addEventListener('change', actualizarVistaPrevia);
        document.getElementById('diaRetiro').addEventListener('input', actualizarVistaPrevia);
        document.getElementById('monto').addEventListener('input', actualizarVistaPrevia);
    </script>
